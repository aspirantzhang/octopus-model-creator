<?php

declare(strict_types=1);

namespace app\api\controller;

use think\facade\Config;
use app\api\service\CategoryTable as CategoryTableService;

class CategoryTable extends Common
{
    protected $categoryTable;

    public function initialize()
    {
        $this->categoryTable = new CategoryTableService();
        parent::initialize();
    }

    public function home()
    {
        $result = $this->categoryTable->paginatedListAPI($this->request->only($this->categoryTable->getAllowHome()), ['main-table']);

        return $this->json(...$result);
    }

    public function add()
    {
        $result = $this->categoryTable->addAPI();

        return $this->json(...$result);
    }

    public function save()
    {
        $result = $this->categoryTable->saveAPI($this->request->only($this->categoryTable->getAllowSave()), ['main-table']);

        return $this->json(...$result);
    }

    public function read(int $id)
    {
        $result = $this->categoryTable->readAPI($id, ['main-table']);

        return $this->json(...$result);
    }

    public function update(int $id)
    {
        $result = $this->categoryTable->updateAPI($id, $this->request->only($this->categoryTable->getAllowUpdate()), ['main-table']);

        return $this->json(...$result);
    }

    public function delete()
    {
        $result = $this->categoryTable->deleteAPI($this->request->param('ids'), $this->request->param('type'));

        return $this->json(...$result);
    }

    public function restore()
    {
        $result = $this->categoryTable->restoreAPI($this->request->param('ids'));

        return $this->json(...$result);
    }

    public function i18nRead(int $id)
    {
        $result = $this->categoryTable->i18nReadAPI($id);

        return $this->json(...$result);
    }

    public function i18nUpdate(int $id)
    {
        $result = $this->categoryTable->i18nUpdateAPI($id, $this->request->only(Config::get('lang.allow_lang_list')));

        return $this->json(...$result);
    }

    public function revisionHome(int $id)
    {
        $result = $this->app->revision->listAPI($this->categoryTable->getTableName(), $id, (int)$this->request->param('page') ?: 1);

        return $this->json($result);
    }

    public function revisionRestore(int $id)
    {
        $result = $this->app->revision->restoreAPI(
            $this->categoryTable->getTableName(),
            $id,
            (int)$this->request->param('revisionId'),
            $this->categoryTable->getRevisionTable()
        );

        return $this->json($result);
    }

    public function revisionRead(int $revisionId)
    {
        $result = $this->app->revision->readAPI((int)$revisionId);

        return $this->json($result);
    }
}
